// generic
.home
    background-image: url('/assets/images/global/_linked/background.jpg')
    background-size: cover;
    background-position: center;
    background-color: #2a2e39;
    position: fixed;
    .intro-image
        background-color: rgba(0,0,0,0.7);
        position: absolute;
        bottom: 0;
        min-width: 100%;
        min-height: 120%;
        width: auto;
        height: auto;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
        -webkit-transition: -webkit-transform 0.6s, opacity 0.6s;
        transition: transform 0.6s, opacity 0.6s;
        -webkit-transition-timing-function: cubic-bezier(0.7, 0, 0.3, 1);
        transition-timing-function: cubic-bezier(0.7, 0, 0.3, 1);
        z-index: 1;
    .canvas
        min-height: 100vh
        &:not(.front) .content
            padding: 100px 20px 70px
            +min(1)
                padding: 100px 0 121px
        &:not(:first-of-type)
            border-top: 1px solid _border
            & > h2
                flex: 0 0 auto
                position: absolute
                top: 0
                left: 50%
                width: 200px
                margin: 0
                padding: 9px
                color: luminosity(scheme.border) > .5 ? darken(scheme.border, 40%) : lighten(scheme.border, 35%)
                font-size: 1em
                text-align: center
                font-weight: 600
                letter-spacing: 2px
                text-transform: uppercase
                border-radius: 0 0 4px 4px
                transform: translateX(-50%)
                background: _border
                border: 1px solid @background
                border-top: none
        +nav-1()
            display: none
            +min(2)
                display: block
                position: absolute
                left: 50%
                bottom: 35px
                transform: translateX(-50%)
            &[data-direction="prev"]
                transform: rotate(180deg) translateX(50%)
                transform-origin: 50% 40%
    // partials
    @require '_*'
